<div class="home group">
  <div class="hero">
      <img src='/assets/images/hero/<%= rand(1..3) %>.jpg' class="welcome">

      <div class="message">
        <a href="/" class="banner">
        <h1>Be the first to know about concerts.</h1>
        <h2>Track your favorite artists and never miss them live.</h2>
        </a>
        <form action="<%= new_session_url %>" method="get">
          <%= render 'shared/auth_token' %>
          <button>Start Tracking Bands</button>
        </form>
    </div>

  </div>
</div>
  <footer>
    <div class="footer group">
      <p>Encore is for demonstration purposes only. Not for commercial use.</p>
      <form action="<%= session_url %>" method="post">
      <%= render 'shared/auth_token' %>
      <input type="hidden" name="user[username_or_email]" value="guest">
      <input type="hidden" name="user[password]" value="password">
      <input type="submit" class= "guest" value="Sign in as Guest user.">
      </form>
    </div>
  </footer>
