<section class="artist-bio group">
  <section class="artist-text group">
    <h1><%= artist.escape('name') %></h1>
    <h2>Bio: </h2>
    <p><%= artist.escape('description') %></p>
    <% if (ids && (ids.indexOf(artist.id) === -1)) { %>
    <button class="track track-artist">Track artist</button>
    <% } else { %>
    <button class="untrack untrack-artist">Stop tracking</button>
    <% } %>
    <button class="bio show active">&#8675 Show full Bio &#8675</button>
    <button class="bio hide">&#8673 Hide full Bio &#8673</button>

  </section>
  <img src="<%= artist.escape('image_url') %>" class="profile">
</section>
<h2>Upcoming Concerts</h2>
