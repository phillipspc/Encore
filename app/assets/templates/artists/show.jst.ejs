<h1><%= artist.escape('name') %></h1>
Description: <%= artist.escape('description') %><br>
<img src="<%= artist.escape('image_url') %>"><br>
<% if (ids && (ids.indexOf(artist.id) === -1)) { %>
<button class="track">track artist</button>
<% } else { %>
<button class="untrack" data-id="<%= artist.id %>">stop tracking</button>
<% } %>
<h2>Upcoming Concerts</h2>
<% concerts.each( function (concert) { %>
  <% concert.escape('location_id') %>
  <%= concert.escape('date') %><br>
<% }) %>
